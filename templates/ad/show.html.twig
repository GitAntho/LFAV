{% extends 'base.html.twig' %}

{% block title %}{{ ad.title }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-8">
                <h1 class="mt-5">{{ ad.title }}</h1>
                <h2 class="h3 text-center mb-3">{{ ad.category }}</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-8">
                <img src="{{ asset('images/film/')~ad.imageFilm.name }}" alt="Image du film {{ ad.title }}" class="image-show">
                <p class="text-center">{{ ad.content }}</p>
            </div>
            <div class="col-4">
                <div class="row bg-light py-3">
                    <div class="col-2">
                        <a href="#">
                            <img src="{{ asset('images/avatar/')~ad.author.avatar.name }}" alt="Avatar de {{ ad.author.fullName }}" class="avatar mt-3">
                        </a>
                    </div>
                    <div class="col">
                        <a href="#" class="text-deco-no">
                            <h3>{{ ad.author.fullName }}</h3>
                        </a>
                        <a href="#">
                            <span class="badge badge-primary">{{ ad.author.ads | length }} films</span>
                        </a>

                        <p class="mt-4">Film posté le {{ ad.createdAt | date('d/m/Y') }}</p>
                        <p>Dernière édition faite le {{ ad.updatedAt | date('d/m/Y') }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}