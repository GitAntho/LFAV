{% extends 'base.html.twig' %}

{% block title %}Page de connexion{% endblock %}

{% block body %}
    <div class="container">
        <div class="bg-light py-2 px-2 mt-5 rounded">
            <h1 class="my-5">Connectez vous</h1>
            <form action="{{ path('login') }}" method="post">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" name="_username" id="email" class="form-control" placeholder="Entrer votre adresse email" required>
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" name="_password" id="email" class="form-control" placeholder="Entrer votre mot de passe" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Connexion</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}